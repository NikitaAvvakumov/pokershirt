Room: <%= @room_id %>

<form phx-change="username_change" action="index.html" method="post">
  <div class="field">
    <div class="control">
      <input name="username" class="input" type="text" placeholder="Your name" value="<%= @username %>">
    </div>
  </div>
</form>

<div class="">
  <h2>Users online</h2>
  <ul>
    <%= for {uuid, %{metas: [metas]}} <- @online_users do %>
      <li>
        <%= if metas[:username] do %>
          <%= metas[:username] %>
        <% else %>
          <i>anonymous</i>
        <% end %>
        <%= if uuid == @user_uid do %>
          <b>(you)</b>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
